# Rebuild the source code only when needed
FROM dfactory01-docker.pkg.coding.net/01factory/release/web:latest AS builder

WORKDIR /app

COPY . .
RUN yarn install --frozen-lockfile --registry https://registry.npmmirror.com
# RUN yarn install --frozen-lockfile --registry https://repo.huaweicloud.com/repository/npm/
RUN yarn build

# Production image, copy all the files and run next
FROM dfactory01-docker.pkg.coding.net/01factory/release/web:latest AS runner

WORKDIR /app

ENV NODE_ENV production

# RUN addgroup -g 1001 -S nodejs
# RUN adduser -S nextjs -u 1001

# You only need to copy next.config.js if you are NOT using the default configuration
COPY --from=builder /app/public ./public
COPY --from=builder /app/.next ./.next
# COPY --from=builder --chown=nextjs:nodejs /app/.next ./.next
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json
# COPY --from=builder /app/next.config.js ./next.config.js
# Overwite config file
ADD ./.env ./.env
ADD ./log4js.json ./log4js.json
ADD ./next.config.js ./next.config.js
ADD ./docs ./docs
# ADD ./yarn.lock ./yarn.lock
# RUN yarn install --production --ignore-scripts --prefer-offline

# USER nextjs

EXPOSE 3000

ENV PORT 3000

# Next.js collects completely anonymous telemetry data about general usage.
# Learn more here: https://nextjs.org/telemetry
# Uncomment the following line in case you want to disable telemetry.
ENV NEXT_TELEMETRY_DISABLED 1

# CMD ["node_modules/.bin/next", "start"]
# ENTRYPOINT [ "yarn", "start" ]
ENTRYPOINT [ "node_modules/.bin/next", "start" ]
